<div class="container m-5">
  <h1><%= @list.name %></h1>
  <% if @list.photo.attached? %>
    <%= cl_image_tag @list.photo.key, height: 650, crop: "scale" %>
  <% end %>
  <div class="row">
    <%@bookmarks.each do |bookmark| %>
        <div class="col mb-3">
            <div class="card-trip">
              <img src="<%= bookmark.movie.poster_url %>" />
              <div class="card-trip-info">
                <p><strong> <%= bookmark.movie.title %></strong> | <%= bookmark.movie.rating %> ‚≠ê</p>
                <p>Overview: <%= bookmark.movie.overview %></p>
                <div class="card-trip-footer">
                  <i class="fas fa-quote-left"><%= bookmark.comment %></i>
                  <%= link_to bookmark_path(bookmark), method: :delete do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </div>
            </div>
        </div>
      <% end %>
  </div>
</div>
