<div class="container m-5">
  <h1><%= @list.name %></h1>
  <% if @list.photo.attached? %>
    <% cl_image_tag @list.photo.key %>
  <% end %>
  <div class="row">
    <%@bookmarks.each do |bookmark| %>
        <div class="col-sm mb-3">
            <div class="card-trip">
              <img src="<%= bookmark.movie.poster_url %>" />
              <div class="card-trip-info">
                <p>Title: <%= bookmark.movie.title %></p>
                <p>Comment: <%= bookmark.comment %></p>
                <%= link_to lists_path(bookmark), method: :delete do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </div>
            </div>
        </div>
      <% end %>
  </div>
</div>
<div class="container m-5">
   <%= link_to "Bookmark a Movie",  new_list_bookmark_path(@list), class: "btn btn-primary" %>
   <%= link_to "Back",  lists_path, class: "btn btn-primary" %>
</div>
