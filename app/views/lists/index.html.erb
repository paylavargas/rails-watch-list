<!--lists-->
<div class="container m-5">
  <div class="row">
    <div class="col-4 mb-3">
        <%= link_to new_list_path do %>
          <div class="card-new-trip">
            <h2>+ Add a list</h2>
          </div>
        <% end %>
    </div>
  <% @lists.each do |list| %>
      <div class="col-4 mb-3">
        <%= link_to list_path(list) do %>
          <div class="card-trip">
            <img src="" />
            <div class="card-trip-infos">
              <div>
                <h2><%= list.name %></h2>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>


  <%= link_to "Add a new list", new_list_path %>
</div>
