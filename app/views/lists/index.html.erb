    <h1>List films you’ve watched.<br>Tell your friends what’s good.</h1>
  </div>
</div>

<!--lists-->
<div class="container m-5">
  <div class="row">
    <div class="col-4 mb-3">
        <%= link_to new_list_path, class: "card-text" do %>
          <div class="card-new-trip">
            <h2>+ Add a list</h2>
          </div>
        <% end %>
    </div>
    <% @lists.each do |list| %>
        <div class="col-4 mb-3">
          <%= link_to list_path(list), class: "card-text" do %>
            <div class="card-pick">
              <img src="image.jpg" alt="">
              <div class="card-pick-info">
                <h2><%= list.name %></h2>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
  </div>
</div>

