<!--banner-->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://bloody-disgusting.com/wp-content/uploads/2022/02/stranger-things-5.png);">
  <div class="container text-center font-weight-bold">
    <h1>List films you’ve watched.<br>Tell your friends what’s good.</h1>
  </div>
</div>

<!--cards-->
<div class="container m-5">
  <h1 class="text-center">My WatchLists</h1>
  <div class="row">
    <div class="col-6 mb-3">
        <%= link_to new_list_path, class: "card-text" do %>
          <div class="card-new-pick">
            <h2>+ Add a list</h2>
          </div>
        <% end %>
    </div>
    <% @lists.each do |list| %>
        <div class="col-6 mb-3">
          <%= link_to list_path(list), class: "card-text" do %>
            <div class="card-pick">
            <% if list.photo.attached? %>
              <% cl_image_tag list.photo.key %>
              <% else %>
              <%= image_tag "/assets/images/cinema1.jpeg", style: ' width:100%;
                height:100%;' %>
            <% end %>
              <div class="card-pick-info">
                <h2><%= list.name %></h2>
                <%= link_to "Delete", list_path(list), data: {confirm: 'Are you sure?'}, method: :delete %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
